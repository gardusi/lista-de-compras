<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="giovannigardusi.listadecompras">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityMain"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ActivityMenu" />
        <activity android:name=".Activities.ActivityListaDeCompras" />
        <activity android:name=".Activities.ActivityNovoItem" />
        <activity android:name=".Activities.ListaOptions.ActivitySalvarLista" />
        <activity android:name=".Activities.ListaOptions.ActivityAbrirLista" />
        <activity android:name=".Activities.ListaOptions.ActivityImprimirLista" />
        <activity android:name=".Activities.ActivitySettings"></activity>
    </application>

</manifest>