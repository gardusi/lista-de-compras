<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_novo_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:background="@android:color/holo_blue_bright"
    tools:context="giovannigardusi.listadecompras.Activities.ActivityNovoItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:text="@string/activity_novo_item_titulo"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/activity_novo_item_item"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:hint="@string/activity_novo_item_dica"
            android:fontFamily="sans-serif-light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <Spinner
                android:id="@+id/activity_novo_item_quantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:dropDownWidth="@dimen/_80sdp" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/activity_novo_item_unidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_novo_item_adicionar"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="@string/activity_novo_item_adicionar"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>