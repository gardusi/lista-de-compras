<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_novo_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:background="@android:color/holo_blue_bright"
    tools:context="giovannigardusi.listadecompras.Activities.ListaIO.ActivitySalvarLista">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:text="@string/activity_salvar_lista_titulo"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/activity_salvar_lista_arquivo"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:hint="@string/activity_salvar_lista_dica"
            android:fontFamily="sans-serif-light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp" >

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/activity_salvar_lista_check"
                android:text="@string/activity_salvar_lista_check"
                android:textSize="@dimen/_13sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-light" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_salvar_lista_salvar"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="@string/activity_salvar_lista_salvar"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>