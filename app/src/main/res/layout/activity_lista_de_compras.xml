<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_novo_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:padding="@dimen/_10sdp"
    tools:context="giovannigardusi.listadecompras.Activities.ActivityListaDeCompras">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/activity_lista_de_compras_titulo"
            android:textSize="@dimen/_18sdp" />

        <ListView
            android:id="@+id/activity_lista_de_compras_lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:clipToPadding="false"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="@dimen/_60sdp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_lista_de_compras_adicionar"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/frame"
        android:padding="@dimen/_5sdp"
        android:src="@android:drawable/ic_input_add" />

